<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:elevation="10dp"
    app:cardBackgroundColor="#F0F0F0"
    app:cardCornerRadius="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.2"
                android:background="@color/VerdeOscuro"
                android:gravity="left|center_vertical"
                android:paddingTop="4dp"
                android:text="    Fecha:"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/AzulClaro"
                android:gravity="left|center_vertical"
                android:paddingTop="4dp"
                android:text="    Tipo:"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.2"
                android:background="@color/Amarillo"
                android:gravity="left|center_vertical"
                android:paddingTop="4dp"
                android:text="    Estado:"
                android:textColor="#000000"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/suge_fecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.2"
                android:background="@color/VerdeOscuro"
                android:gravity="center_horizontal"
                android:paddingBottom="2dp"
                android:text="0000-00-00"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suge_tipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/AzulClaro"
                android:gravity="center_horizontal"
                android:paddingBottom="2dp"
                android:text="PAGO DE BONO DE PRODUCCION"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suge_estado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.2"
                android:background="@color/Amarillo"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:text="Pendiente"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#DCDCDC"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/AzulClaro"
                android:gravity="left|center_vertical"
                android:paddingTop="4dp"
                android:text="    Informe:"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@color/RojoOscuro"
                android:gravity="left|center_vertical"
                android:paddingTop="4dp"
                android:text="    Area:"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DCDCDC"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/suge_informe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/AzulClaro"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:text="_ _ _ _ _ _ _ _ _ _"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suge_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@color/RojoOscuro"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:text="ADMINISTRACION"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>